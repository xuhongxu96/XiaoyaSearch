	<script type="text/javascript">
		function getQueryString(name) {
			var reg = new RegExp("(^|&amp;)" + name + "=([^&amp;]*)(&amp;|$)", "i");
			var r = window.location.search.substr(1).match(reg);
			if (r != null) return unescape(r[2]); return null;
		}

		function change_lang(type){
			if(type == "ch"){
				document.getElementById("lang_ch").style.display="none";
				document.getElementById("lang_en").style.display="";
				document.getElementById("lang_tw").style.display="";

				document.getElementById("account_name_label").innerHTML = "用户名";
				document.getElementById("password_label").innerHTML = "密码";
				document.getElementById("remUsername_label").innerHTML = "记住用户名";
				document.getElementById("secure_label").innerHTML = "SSL安全登录";
				document.getElementById("all_secure_label").innerHTML = "全程SSL";
				document.getElementById("btn_login").value = "登 录";

				document.getElementById("resetPwd").innerHTML = "忘记密码？";
				document.getElementById("language").value = "0";
				document.getElementById("logintitle").style.backgroundImage="url(//mimg.qiye.163.com/o/domain/201410101500/index/css/../img/bg_cn_noqiye.png)";
			}
			if(type == "en"){
				document.getElementById("lang_ch").style.display="";
				document.getElementById("lang_en").style.display="none";
				document.getElementById("lang_tw").style.display="";

				document.getElementById("account_name_label").innerHTML = "Username";
				document.getElementById("password_label").innerHTML = "Password";
				document.getElementById("remUsername_label").innerHTML = "Remember Username";
				document.getElementById("secure_label").innerHTML = "SSL login";
				document.getElementById("all_secure_label").innerHTML = "ALL SSL";
				document.getElementById("btn_login").value = "Sign in";

				document.getElementById("resetPwd").innerHTML = "Forget Password？";
				document.getElementById("language").value = "1";
				document.getElementById("logintitle").style.backgroundImage="url(//mimg.qiye.163.com/o/domain/201410101500/index/css/../img/bg_cn_noqiye.png)";
			}
			if(type == "tw"){
				document.getElementById("lang_ch").style.display="";
				document.getElementById("lang_en").style.display="";
				document.getElementById("lang_tw").style.display="none";

				document.getElementById("account_name_label").innerHTML = "用戶名";
				document.getElementById("password_label").innerHTML = "密碼";
				document.getElementById("remUsername_label").innerHTML = "記住用戶名";
				document.getElementById("secure_label").innerHTML = "SSL安全登錄";
				document.getElementById("all_secure_label").innerHTML = "全程SSL";
				document.getElementById("btn_login").value = "登 錄";

				document.getElementById("resetPwd").innerHTML = "忘記密碼？";
				document.getElementById("language").value = "2";
				document.getElementById("logintitle").style.backgroundImage="url(//mimg.qiye.163.com/o/domain/201410101500/index/css/../img/bg_tw_noqiye.png)";
			}
		}
	</script>
		<script type="text/javascript">
		var lang = getQueryString("hl");
		if("zh_TW" == lang)
			change_lang('tw');
		if("en_US" == lang)
			change_lang('en');
		if("zh_CN" == lang)
			change_lang('ch');
	</script>
