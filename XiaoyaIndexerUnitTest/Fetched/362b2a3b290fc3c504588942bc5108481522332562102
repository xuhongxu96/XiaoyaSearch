<script>
    
    $(function(){
        var btn_main_menu = $(".t_menu");
        var btn_main_close = $(".pop_menu .close");
        var btn_nav_li = $(".header li");

        var win_pop = $(".pop_menu");
        var dropdown = $(".header .dropdown");

        var tmp = '';

        var bnu_nav_hide = function(t){
            win_pop.fadeOut('400');
            dropdown.fadeOut('400');
            btn_nav_li.removeClass('is_active');
            tmp = '';
        };

        var win_init = function(){
            btn_main_menu.on('click', function() {
                bnu_nav_hide();
                win_pop.fadeIn('400');
            });

            btn_main_close.on('click', function() {
                bnu_nav_hide();
            });

            btn_nav_li.on('click', function() {
                var t = $(this);
                var d = t.find('.dropdown');
                var n = btn_nav_li.index(t);
                if(tmp !== n){
                    bnu_nav_hide();
                    t.addClass('is_active');
                    d.fadeIn('400',function(){
                        tmp = btn_nav_li.index(t);
                    });
                    return true;
                }
                bnu_nav_hide();
            });
        }

        win_init();
    });

</script>
